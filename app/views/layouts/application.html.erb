<!DOCTYPE html>
<html>
  <head>
    <title>TwitterProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css'%>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal">Twitter</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <p><%= link_to 'На главную',home_path, class: "p-2 text-dark" %></p>
      </nav>
      
      <% if user_signed_in? %>
        <p><%= link_to current_user.email, home_path, class: "btn btn-outline-warning" %></p>
        <p><%= link_to 'Новый пост', new_post_path, class: "btn btn-outline-primary" %></p>
        <p><%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %></p>

      <% else %>
        <p><%= link_to 'Зарегистрироваться', new_user_registration_path, class: "btn btn-outline-primary" %></p>
        <p><%= link_to 'Войти', new_user_session_path, class: "btn btn-outline-primary" %></p>
      <% end %>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert <% bootstrap_class_for(name)%>">
              <button class="close" data-dismiss="alert">&times;</button>
              <% message %>
            </div>
          <%end%>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
