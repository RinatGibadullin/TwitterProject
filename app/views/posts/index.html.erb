<p id="notice"><%= notice %></p>

<h1>Лента</h1>

<% @posts.each do |post| %>

  <div class="card border-info mb-3">

    <div class="card-header">
      <h3><%= post.user.email %></h3>
      <h2 class="text-center"><%= post.title %></h2>
    </div>

    <div class="card-body">
      <h5 class="card-subtitle mb-2 text-muted text-center"><%= post.desc %></h5>
      <h3 class="card-text text-center"><%= post.body %></h3>

      <div class="text-right">
        <p><%= link_to 'Читать далее', post, class: "btn btn-outline-primary" %></p>
      </div>
      
    </div>

    <div class="card-footer text-muted">
      <%= post.created_at %>
    </div>

  </div>

  <br>
<% end %>

